<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/main_color"
    tools:context=".CreateProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            >
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/cancel"
                android:id="@+id/cancel"

                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/pantonnarrowbold"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"

            >
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/profileplaceholder"
                app:riv_corner_radius="10dp"
                android:id="@+id/profileImage"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/profileImage"
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload your picture"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pantonnarrowbold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload a photo under 2 MB"
                    android:textColor="#AAAAAA"
                    android:fontFamily="@font/pantonnarrowregular"
                    android:textSize="13sp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginTop="4dp"
                    android:layout_width="64dp"
                    android:layout_height="28dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/pantonnarrowsemibold"
                    android:textColor="@color/white"
                    android:text="Upload"
                    android:id="@+id/uploadBtn"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_back"
                    android:backgroundTint="#a020f0"
                    />

            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >
            <EditText

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:id="@+id/firstName"
                android:background="@drawable/btn_back"
                android:backgroundTint="#CECECE"
                android:hint="Full Name"
                android:fontFamily="@font/pantonnarrowregular"
                android:textSize="14sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textPersonName"
                android:layout_marginEnd="5dp"
                />
            <EditText
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:id="@+id/lastName"
                android:background="@drawable/btn_back"
                android:backgroundTint="#CECECE"
                android:hint="Last Name"
                android:fontFamily="@font/pantonnarrowregular"
                android:textSize="14sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textPersonName"
                />
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:id="@+id/username"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_back"
            android:backgroundTint="#CECECE"
            android:hint="Username"
            android:fontFamily="@font/pantonnarrowregular"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:inputType="textPersonName"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:id="@+id/phone"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_back"
            android:backgroundTint="@color/white"
            android:hint="Phone Number"
            android:fontFamily="@font/pantonnarrowregular"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:inputType="phone"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:id="@+id/pinNumber"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_back"
            android:backgroundTint="@color/white"
            android:hint="PIN Number"
            android:fontFamily="@font/pantonnarrowregular"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:inputType="numberPassword"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:id="@+id/emergency1"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_back"
            android:backgroundTint="@color/white"
            android:hint="Emergency Contact 1"
            android:fontFamily="@font/pantonnarrowregular"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:inputType="phone"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:id="@+id/emergency2"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_back"
            android:backgroundTint="@color/white"
            android:hint="Emergency Contact 2"
            android:fontFamily="@font/pantonnarrowregular"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:inputType="phone"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:id="@+id/emergency3"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_back"
            android:backgroundTint="@color/white"
            android:hint="Emergency Contact 3"
            android:fontFamily="@font/pantonnarrowregular"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:inputType="phone"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:id="@+id/emergencyPin"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_back"
            android:backgroundTint="@color/white"
            android:hint="Set Emergency PIN"
            android:fontFamily="@font/pantonnarrowregular"
            android:textSize="14sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:inputType="numberPassword"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_back"
            android:backgroundTint="#a020f0"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/pantonnarrowregular"
            android:id="@+id/createProfile"
            />
    </LinearLayout>
</ScrollView>
