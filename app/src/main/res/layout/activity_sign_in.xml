<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".SignInActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/highres"
        android:id="@+id/topImage"
        />
    <TextView
        android:id="@+id/lbl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topImage"
        android:textColor="@color/white"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:textSize="22sp"
        android:layout_marginTop="-10dp"
        android:text="Welcome to the Premier Consent Validation App."
        android:fontFamily="@font/pantonnarrowbold"
        />
    <TextView
        android:id="@+id/lbl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl1"
        android:textColor="@color/white"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:textSize="22sp"
        android:layout_marginTop="2dp"
        android:text="Always Protect Yourself."
        android:fontFamily="@font/pantonnarrowbold"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:id="@+id/email"
        android:layout_below="@+id/lbl2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_back"
        android:backgroundTint="@color/white"
        android:hint="Email Address"
        android:fontFamily="@font/pantonnarrowregular"
        android:textSize="14sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:id="@+id/password"
        android:layout_below="@+id/email"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_back"
        android:backgroundTint="@color/white"
        android:hint="Password"
        android:fontFamily="@font/pantonnarrowregular"
        android:textSize="14sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:inputType="textPassword"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="14sp"
        android:fontFamily="@font/pantonnarrowsemibold"
        android:textColor="#407AD6"
        android:layout_below="@+id/password"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/resetPassword"
        android:layout_alignParentEnd="true"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/pantonnarrowregular"
        android:layout_below="@+id/resetPassword"
        android:background="@drawable/btn_back"
        android:backgroundTint="#a020f0"
        android:id="@+id/loginBtn"
        android:textAllCaps="false"
        />
    <RelativeLayout
        android:id="@+id/orLoginRR"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginBtn"
        android:layout_marginTop="24dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E8ECF4"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/loginLabel"
            android:layout_marginEnd="20dp"
            />
        <TextView
            android:id="@+id/loginLabel"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or Login With"
            android:textColor="#6A707C"
            android:textSize="13sp"
            android:fontFamily="@font/pantonnarrowregular"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E8ECF4"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/loginLabel"
            android:layout_marginStart="20dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/orLoginRR"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/google"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_back"
            android:backgroundTint="@color/white"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/google"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/apple"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_back"
            android:backgroundTint="@color/white"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/apple"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="14sp"
            android:fontFamily="@font/pantonnarrowsemibold"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Now"
            android:textSize="14sp"
            android:fontFamily="@font/pantonnarrowsemibold"
            android:textColor="#a020f0"
            android:layout_marginStart="8dp"
            android:id="@+id/signUp"
            />


    </LinearLayout>
</RelativeLayout>
