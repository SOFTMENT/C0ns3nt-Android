<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/pantonnarrowbold"
    android:textSize="20sp"
    android:text="Hi, Softment"
    android:textColor="@color/white"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:id="@+id/fullName"
    />
    <TextView
        android:layout_below="@+id/fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pantonnarrowregular"
        android:textSize="15sp"
        android:text="Feb 20, 2023"
        android:textColor="#AAAAAA"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:id="@+id/date"

        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:riv_corner_radius="27dp"
        android:id="@+id/profile"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profileplaceholder"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/date"
        android:background="#181818"
        android:layout_marginTop="32dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="GOLD TIER"
            android:fontFamily="@font/pantonnarrowbold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/tier"
            />
        <TextView

            android:layout_below="@+id/tier"
            android:id="@+id/uniqueId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="1 Unique ID"
            android:fontFamily="@font/pantonnarrowregular"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="20dp"
            />

        <LinearLayout
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/btn_back"
            android:backgroundTint="#2A2A2A"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/refreshUniqueId"
            >
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/refresh"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refresh Unique ID"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/pantonnarrowregular"
                android:textSize="13sp"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="@drawable/btn_back"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_below="@+id/uniqueId"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/qrView"
            android:layout_marginTop="24dp"

            >
        <ImageView
            android:layout_margin="6dp"
            android:background="@drawable/btn_back"
            android:id="@+id/qr"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/placeholder"
            />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qrView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/pantonnarrowsemibold"
            android:id="@+id/uniqueIdNumbeer"


            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:text="Start Consent"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/pantonnarrowregular"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_back"
            android:backgroundTint="#4608C1"
            android:id="@+id/startConsentBtn"
            android:textAllCaps="false"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog"
        android:visibility="gone"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_back"
        android:backgroundTint="#EB000000"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="16dp">

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consent Request"
            android:textColor="@color/white"
            android:fontFamily="@font/pantonnarrowbold"
            android:textSize="18sp"
             />

        <TextView
            android:id="@+id/dialogMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialogTitle"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="20dp"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:fontFamily="@font/pantonnarrowregular"
            android:textAlignment="center"
            android:text="Do you agree to consensual interaction with vaibhav sharma?" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/btn_back"
            android:id="@+id/buttonNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialogMessage"
            android:layout_marginTop="24dp"
            android:layout_alignParentStart="true"
            android:backgroundTint="#FF0000"
            android:text="No"
            android:textColor="#FFFFFF" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/btn_back"
            android:id="@+id/buttonYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialogMessage"
            android:layout_marginTop="24dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#0000FF"
            android:text="Yes"
            android:textColor="#FFFFFF" />

    </RelativeLayout>


</RelativeLayout>
